@model IEnumerable<Project.Models.Radio>

@{
    ViewData["Title"] = "Radios";
}

<h2>Radios</h2>

<p>
    <a class="btn btn-sm btn-primary"  asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Frequency)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Frequency)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.RadioId">Edit</a> 
                <a class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@item.RadioId">Details</a> 
                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.RadioId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
