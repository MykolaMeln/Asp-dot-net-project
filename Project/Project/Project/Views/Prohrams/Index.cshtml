@model IEnumerable<Project.Models.Prohram>

@{
    ViewData["Title"] = "Prohrams";
}

<h2>Prohrams</h2>

<p>
    <a class="btn btn-sm btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.radioid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name_program)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Period)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hour_begin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hour_end)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.radioid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name_program)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Period)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hour_begin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hour_end)
            </td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.ProgramId">Edit</a> 
                <a class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@item.ProgramId">Details</a> 
                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.ProgramId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
